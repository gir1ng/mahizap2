<div class="row", style="margin-top: 20px;">
    <div class="col-xs-6 col-xs-offset-3">
        <%= form_with(url: secret_login_path, local: true, class: 'mt-100') do |f| %>
            <div class="form-group">
                <%= f.label :secret_password, "閲覧するには非公開ページ用のパスワードが必要です" %>
                <%= f.password_field :secret_password, class: 'form-control' %>
            </div>
            <div class="row bottom-text">
                <div class="col-xs-2 col-xs-offset-5">
                    <%= f.submit "閲覧", class: "btn btn-primary", id: "login_btn" %>
                </div>
                <div class="col-xs-4", style="margin-top: 5px;">
                    <%= link_to "パスワードを設定する", create_secret_password_path %>
                </div>
            </div>
        <% end %>
    </div>
</div>