<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>チェックリストの追加</h1>
        
        <%= form_with(model: @task, local: true) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
            <%= f.label :todo, "やること" %>
            <%= f.text_field :todo, class: 'form-control' %>
        </div>
        <div class="form-group">
            <%= f.label :not_todo, "自粛すること" %>
            <%= f.text_field :not_todo, class: 'form-control' %>
        </div>
        <span class="text-danger">※片方のみ入力</span>
        <%= f.submit "追加", class: "btn btn-primary center-block" %>
        
        <% end %>
    </div>
</div>
